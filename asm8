name_list=[]
while True :
    print("1)add name")
    print("2)show list")
    print("3)remove name")
    option = input("enter your name:")
    
    
    
    if option=="1":
        name=input("ente your name")
        name_list.append(name)
    elif option == "2":
        print("your list",name_list)
    elif option == "3" :
        remove_name=input("enter name you want to remove")
        name_list.remove(remove_name)
    elif option == "0" :
        break
    else:
        print("invalid option")

